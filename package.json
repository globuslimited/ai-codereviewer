{
    "name": "open-ai-reviewer",
    "version": "1.0.0",
    "description": "Open AI powered code reviews",
    "main": "lib/main.js",
    "author": "Ville Saukkonen",
    "type": "module",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "package": "ncc build --minify --source-map",
        "prepare": "husky",
        "format": "prettier --write .",
        "lint": "prettier --check ."
    },
    "dependencies": {
        "@actions/core": "1.11.1",
        "@ai-sdk/anthropic": "0.0.56",
        "@ai-sdk/google": "0.0.55",
        "@ai-sdk/openai": "0.0.72",
        "@octokit/rest": "21.0.2",
        "ai": "3.4.33",
        "minimatch": "10.0.1",
        "parse-diff": "0.11.1",
        "ts-node": "10.9.2",
        "zod": "3.23.8"
    },
    "devDependencies": {
        "@types/node": "22.9.0",
        "@vercel/ncc": "0.38.2",
        "prettier": "3.3.3",
        "typescript": "5.6.3",
        "@octokit/webhooks-types": "7.6.1",
        "husky": "9.1.6",
        "lint-staged": "15.2.10"
    },
    "packageManager": "pnpm@9.13.2",
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
